    <main class="page product-page">
        <section class="clean-block clean-product dark">
            {{#train}}
            <div class="container">
                <div class="block-heading">
                    <h2 class="text-info">{{'sport.name'}}</h2>
                    <p>{{level}}</p>
                    <p>{{description}}</p>
                </div>
                <div class="block-content">
                    <div class="product-info">
                        <div class="row">
                            <div class="col-md-6"><img class="img-fluid" src="/img/{{'sport.name'}}.png"></div>
                            <div class="col-md-6">
                                <div class="info d-flex flex-column justify-content-center align-items-center">
                                    <h3>{{level}}</h3>
                                    <div class="price">
                                        <h5>{{day}}</h5>
                                    </div>
                                    <div class="price">
                                        <h5>{{start_at}} : {{ends_at}}</h5>
                                    </div><a href="/trainee/addsession/{{id}}"><button class="btn btn-primary" type="button"><i class="icon-basket"></i>Get this training</button></a>
                                    <div class="summary">
                                        <p>{{'trainer.name'}}</p>
                                        <p>{{experience}}</p>
                                        <p>{{'trainer.description'}}</p>
                                        <!--Accordion wrapper-->
                                        <div class="accordion md-accordion" id="accordionEx" role="tablist" aria-multiselectable="true">
                                            {{#each previous_jobs}}
                                                <!-- Accordion card -->
                                                <div class="card">
                                                    <!-- Card header -->
                                                <div class="card-header" role="tab" id="headingOne1">
                                                    <a data-toggle="collapse" data-parent="#accordionEx" href="#job{{@index}}" aria-expanded="true" aria-controls="collapseOne1">
                                                    <h5 class="mb-0">
                                                    {{@key}} <i class="fas fa-angle-down rotate-icon"></i>
                                                    </h5>
                                                     </a>
                                                </div>

                                                    <!-- Card body -->
                                                 <div id="job{{@index}}" class="collapse" role="tabpanel" aria-labelledby="headingOne1" data-parent="#accordionEx">
                                                    <div class="card-body">
                                                        {{this}}
                                                    </div>
                                                </div>

                                                </div>
                                            {{/each}}
                                            </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="product-info">
                        <div>
                            <ul class="nav nav-tabs" id="myTab"></ul>
                            <div class="tab-content" id="myTabContent">
                                <div class="tab-pane fade show description" role="tabpanel" id="description">
                                    <p>Here goes the long description</p>
                                </div>
                                <div class="tab-pane fade show" role="tabpanel" id="reviews">
                                    <div class="reviews">
                                        <div class="review-item">
                                            <div class="rating"><img src="/img/star.svg"><img src="/img/star.svg"><img src="/img/star.svg"><img src="/img/star.svg"><img src="/img/star-empty.svg"></div>
